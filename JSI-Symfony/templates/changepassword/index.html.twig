{% extends 'backoffice.html.twig' %}

{% block body %}
<section class="wrapper">
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <h4><i class="fa fa-angle-right"></i> Changer de mot de passe</h4>
                    <hr>
                </table>
                
                <div class="container" style="width:300px">
                    <form action="{{ path('security_password_change') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input id="email" type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label for="email">Ancien mot de passe</label>
                            <input id="email" type="password" class="form-control" name="old_password">
                        </div>
                        <div class="form-group">
                            <label for="email">Nouveau mot de passe</label>
                            <input id="email" type="password" class="form-control" name="new_password">
                        </div>
                        <button type="submit" class="btn btn-success">Enregistrer</button>
                        <p>{{ message }}</p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}