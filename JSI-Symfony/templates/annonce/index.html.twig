{% extends 'backoffice.html.twig' %}

{% block body %}
            <section class="wrapper">
                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">
                                <h4><i class="fa fa-angle-right"></i> Annonces</h4>
                                <hr>
                                    <thead>
                                        <tr>
                                            <th><i class="fa fa-sort-numeric-asc"></i></th>
                                            <th>Titre</th>
                                            <th>Description</th>
                                            <th>Note</th>
                                            <th><i class=" fa fa-calendar"></i></th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for annonce in annonces %}
                                        <tr>
                                            <td style="width:20px">{{ annonce.id }}</td>
                                            <td class="col-md-1">{{ annonce.titre }}</td>
                                            <td>{{ annonce.description|slice(0,150)}}...</td>
                                            <td>{{ annonce.note}}</td>
                                            <td class="col-md-1">{{ annonce.dateCreation ? annonce.dateCreation|date('H:i | d-m-Y' ) : '' }}</td>
                                            
                                            <td class="col-md-1">
                                                <a href="{{ path('annonce_show', {'id': annonce.id}) }}">
                                                <button class="btn btn-success btn-xs"><i class="fa fa-eye"></i></button>
                                                </a>
                                                <a href="{{ path('annonce_edit', {'id': annonce.id}) }}" style="display:inline">
                                                <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                                </a>
                                                {{ include ('annonce/_delete_form.html.twig') }}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="19">Pas d'annonce dans la base de donn√©e</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>

{% endblock %}
