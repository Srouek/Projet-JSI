{% extends 'backoffice.html.twig' %}

{% block body %}

        <section class="wrapper site-min-height">
                <!-- page start-->
            <div class="chat-room mt">
                <aside class="mid-side">
                        <h1 style="padding:1rem"><i class="fa fa-angle-right"></i> Annonce {{ annonce.titre }} | <span>Publié le {{ annonce.dateCreation ? annonce.dateCreation|date('d-m-Y à H:i') : '' }} 
                            <strong class="pull-right">
                            <a href="{{ path('annonce_index') }}">
                            <button class="btn btn-success btn-xs"><i class="fa fa-arrow-left"></i></button>
                            </a>
                            <a href="{{ path('annonce_edit', {'id': annonce.id}) }}" style="display:inline">
                            <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                            </a>
                            {{ include('annonce/_delete_form.html.twig') }}
                            </strong>
                        </h1>
                        <hr>
                    <div class="group-rom">
                        <div class="first-part">Description</div>
                        <div class="second-part">{{ annonce.description }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part">Equipement</div>
                        <div class="second-part">{{ annonce.equipement }}</div>
                    </div>
                     <div class="group-rom">
                        <div class="first-part">Lieux</div>
                        <div class="second-part">{{ annonce.lieu }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part">Images</div>
                        <div class="second-part">
                           {% if annonce.image1 %}<img src="{{ absolute_url(asset(annonce.image1)) }}" style="width:200px" alt="">{% endif %}                {% if annonce.image2 %}<img src="{{ absolute_url(asset(annonce.image2)) }}" style="width:200px" alt="">{% endif %}
                           {% if annonce.image3 %}<img src="{{ absolute_url(asset(annonce.image3)) }}" style="width:200px" alt="">{% endif %}
                           {% if annonce.image4 %}<img src="{{ absolute_url(asset(annonce.image4)) }}" style="width:200px" alt="">{% endif %}
                           {% if annonce.image5 %}<img src="{{ absolute_url(asset(annonce.image5)) }}" style="width:200px" alt="">{% endif %}
                        </div>
                    </div>

                    <div class="group-rom">
                        <table class="table table-striped table-advance table-hover col-sm-12">
                            <thead>
                                <tr>
                                    <th><i class="fa fa-building-o"></i> Type</th>
                                    <th><i class="fa fa-square"></i> Surface</th>
                                    <th><i class=" fa fa-edit"></i> Disponibilité</th>
                                    <th><i class=" fa fa-eur"></i> Loyer</th>
                                    <th><i class=" fa fa-euro"></i> Charges</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>{{ annonce.type }}</td>
                                    <td>{{ annonce.surface }}<span>m²</span></td>
                                    <td>{{ annonce.disponibilite }}</td>
                                    <td>{{ annonce.loyer }}<span>€/m²/an</span></td>
                                    <td>{{ annonce.charges }}<span>€/m²/an</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="group-rom">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th><i class="fa fa-chair"></i> Bureau</th>
                                        <th class=""><i class="fa fa-users"></i> Open Space</th>
                                        <th><i class="fa fa-users"></i> Salle de Réunion</th>
                                        <th><i class=" fa fa-edit"></i> Cuisine</th>
                                        <th><i class=" fa fa-glass-cheers"></i> Espace Détente</th>
                                        <th><i class=" fa fa-user"></i>Accueil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>{{ annonce.bureaux }}</td>
                                        <td>{{ annonce.openSpace }}</td>
                                        <td>{{ annonce.salleReunion }}</td>
                                        <td>{{ annonce.espaceDetente }}</td>
                                        <td>{{ annonce.accueil }}</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- aside right -->
                    <!-- Bloc Note -->
                </aside>
                    
                    <aside class="right-side">
                        <h1 style="padding:1rem"><i class="fa fa-angle-right"></i> Note</h1>
                        <hr>
                        <div class="group-rom">
                            <blockquote>{{ annonce.note }}</blockquote>
                        </div>
                    </aside>
                        <!-- end aside right -->
                </div>
                <!-- page end-->
            </section>
             
{% endblock %}
