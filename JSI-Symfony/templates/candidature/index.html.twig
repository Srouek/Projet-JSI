{% extends 'backoffice.html.twig' %}

{% block title %}Hello CandidatureController!{% endblock %}

{% block body %}
<section class="wrapper">
    {# <h3><i class="fa fa-angle-right"></i> Candidature reçu</h3> #}


    <!-- row -->
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <h4><i class="fa fa-angle-right"></i> Candidature reçu</h4>
                    <hr>
                    <thead>
                        <tr>
                            <th class=""><i class="fa fa-user-md"></i> Nom</th>
                            <th class=""><i class="fa fa-user-md"></i> Prenom</th>
                            <th><i class="fa fa-at"></i> Email</th>
                            <th><i class="fa fa-undo"></i> CV</th>
                            <th><i class=" fa fa-envelope"></i> Message</th>
                            <th><i class="fa fa-calendar-o"></i> Date</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                    {% for candidature in candidatures %}
                        <tr>
                        
                            <td>{{ candidature.nom }}</td>
                            <td>{{ candidature.prenom }}</td>
                            <td>{{ candidature.email }}</td>
                            <td>{{ candidature.cv }}</td>
                            <td>{{ candidature.message|slice(0,100) }}...</td>
                            <td>{{ candidature.dateReception ? candidature.dateReception|date('H:i | d-m-Y') : '' }}</td>
                            <td>
                                <a href="{{ path('candidature_show', {'id': candidature.id}) }}"><button class="btn btn-success btn-xs"><i class="fa fa-eye"></i></button></a>
                                {{ include('candidature/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">Pas de message trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>
    <!-- /row -->
</section>  
{% endblock %}
